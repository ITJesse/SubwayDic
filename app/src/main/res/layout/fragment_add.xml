<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" tools:context="cn.itjesse.subwaydic.AddFragment">

    <!-- TODO: Update blank fragment layout -->

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/addTitleText"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:padding="20dp"
        android:inputType="text"
        android:hint="@string/add_title_text" />

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:inputType="textMultiLine"
        android:ems="10"
        android:id="@+id/addContentText"
        android:layout_below="@+id/addTitleText"
        android:layout_centerHorizontal="true"
        android:layout_above="@+id/addBtn"
        android:padding="20dp"
        android:hint="@string/add_content_text"
        android:gravity="left|top" />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/add_button_text"
        android:id="@+id/addBtn"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:padding="20dp" />

</RelativeLayout>
