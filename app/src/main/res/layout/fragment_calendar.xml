<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="cn.itjesse.subwaydic.CalendarFragment">

    <View
        android:id="@+id/eton_placeholder"
        android:layout_width="10dp"
        android:layout_height="0dp"
        android:layout_centerHorizontal="true" />

    <Spinner
        android:id="@+id/year_selector"
        android:layout_width="15dp"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@id/eton_placeholder"
        android:entries="@array/year"
        android:padding="15dp"
        android:spinnerMode="dropdown" />

    <Spinner
        android:id="@+id/group_selector"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@id/eton_placeholder"
        android:entries="@array/group"
        android:padding="15dp"
        android:spinnerMode="dropdown" />

    <CalendarView
        android:id="@+id/calendarView"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/year_selector" />

</RelativeLayout>
